<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadinanova"
    android:orientation="vertical"
    tools:context=".activity.LogovanjeActivity">

    <TextView
        android:id="@+id/labelKorisnickoIme"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="150sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="10sp"
        android:text="@string/KorisnickoIme"
        android:textColor="#FFDBDAEA"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputKorisnickoIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:singleLine="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/labelSifra"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:text="@string/sifra"
        android:textColor="#FFDBDAEA"
        android:textSize="24sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
      >

    <EditText
        android:id="@+id/inputSifra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        app:passwordToggleEnabled="true"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/tipKorisnika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp">

        <RadioButton
            android:id="@+id/radioButtonKlijent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            android:textColor="#FFDBDAEA"
            android:text="@string/tipKlijent" />

        <RadioButton
            android:id="@+id/radioButtonVozac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="#FFDBDAEA"
            android:textSize="18sp"
            android:text="@string/tipVozac" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonOcena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/btn"
        android:text="@string/potvrdi"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/labelRegistracija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/labelRegistracija"
        android:textColor="#FFDBDAEA" />

    <TextView
        android:id="@+id/labelKorisnik"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#FFDBDAEA"
        android:textSize="14sp" />


</LinearLayout>