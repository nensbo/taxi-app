<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pozadinanova"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelNaslovRegistracija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="20sp"
                android:height="40sp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/labelNaslovRegistracija"
                android:textColor="#FFDBDAEA"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/labelIme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/ime"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputIme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelPrezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/prezime"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputPrezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/email"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelSifra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/sifraRegistracija"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputSifra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/telefon"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelAdresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/adresa"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/inputAdresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBoxVozac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="5sp"
                android:fontFamily="sans-serif-black"
                android:text="@string/registracijaTipVozac"
                android:textColor="#FFDBDAEA"
                android:textSize="18sp"
                 />

            <LinearLayout
                android:id="@+id/layoutVozac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/labelSlika"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/slika"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="409dp"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="1dp">

                    <EditText
                        android:id="@+id/inputSlika"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginEnd="20sp"
                        android:layout_marginRight="20sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/input_bg"
                        android:ems="10"
                        android:paddingLeft="15sp"
                        android:paddingTop="5sp"
                        android:paddingRight="60sp"
                        android:paddingBottom="5sp"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttonSlika"
                        android:layout_width="wrap_content"
                        android:layout_height="28sp"
                        android:layout_alignTop="@id/inputSlika"
                        android:layout_alignRight="@id/inputSlika"
                        android:layout_alignBottom="@id/inputSlika"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/cardview_shadow_end_color"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/buttonIzaberi"
                        android:textColor="#FFDBDAEA"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/labelGodineStarosti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/godineStarosti"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputGodineStarosti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/labelGodineIskustva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/godineIskustva"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputGodineIskustva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/labelStraniJezik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/straniJezik"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputStraniJezik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/labelModelVozila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/modelVozila"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputModelVozila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/labelRegistarskiBroj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/registarskiBroj"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputRegistarskiBroj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/labelBrojSedista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/brojSedista"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/inputBrojSedista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/input_bg"
                    android:ems="10"
                    android:paddingLeft="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/switchVozilo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp"
                    android:text="@string/ekoloskoVozilo" />

                <Switch
                    android:id="@+id/switchSediste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="5sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#FFDBDAEA"
                    android:textSize="18sp"
                    android:text="@string/sedisteZaBebe" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonRegistracija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/btn"
                android:text="@string/buttonRegistracija"
                android:textColor="#C60B0B0B"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>